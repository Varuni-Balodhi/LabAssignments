package Java_OOPs;

class Book{
	String bookTitle;
	String author;
	String ISBN;
	int numOfCopies;
	Book(String bookTitle,String author,String ISBN,int numOfCopies){
		this.bookTitle=bookTitle;
		this.author=author;
		this.ISBN=ISBN;
		this.numOfCopies=numOfCopies;
		if(numOfCopies<0) {
			throw new IllegalArgumentException("Quantity must be non negetive");
		}
	}
	public void print() {
		System.out.println(bookTitle+"-"+author+"-"+ISBN+"-"+numOfCopies);
	}
}
class BookStore extends Book{
	String[] books =new String[10];
	
	public void sell(String title,int count) {
		for(String book: books) {
			if(book.equals(bookTitle)) {
				if(numOfCopies==0) {
					System.out.println("Not enought stock");
				}
				else {
					numOfCopies--;
				}
			}else {
				System.out.println("Book not found");
			}
		}
	}
	public void order(String isbn,int count) {
		
	}
}
