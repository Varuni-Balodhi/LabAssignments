package Java_OOPs;
import java.util.*;
public class BookStore{
 private Book[] books=new Book[10];
 private int count;
 BookStore(){
	 books=new Book[10];
	 count=0;
 }
 public void sell(String title,int qty) {
	 for(int i=0;i<count;i++) {
		 if(books[i].getTitle().equalsIgnoreCase(title)) {
			 if(books[i].removeCopies(qty)) {
				 System.out.println("Book sold succesfully");
			 }else {
				 System.out.println("Not enough Stock");
			 }
			 return;
		 }
		 else {
			 System.out.println("Book not found");
		 }
	 }
 }
 public void order(String isbn,int qty) {
	for(int i=0;i<count;i++) {
		if(books[i].getISBN().equals(isbn)) {
			books[i].addCopies(qty);
			System.out.println("Quantity Increased");
			return;
		}
		if(count<books.length) {
			books[count++]=new Book(Title,authorname,isbn,qty);
			System.out.println("Book added");
		}else {
			System.out.println("Cannot add new Book to the store");
		}
	}
 }
 public void display() {
	 for(int i=0;i<count;i++) {
		 books[i].display();
	 }
 }
}
