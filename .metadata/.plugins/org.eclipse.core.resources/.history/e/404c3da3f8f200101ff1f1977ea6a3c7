package Java_OOPs;

public class Book {
String bookTitle;
String author;
String isbn;
int numOfCopies;
Book(String bookTitle,String author,String isbn,int numOfCopies){
	this.bookTitle=bookTitle;
	this.author=author;
	this.isbn=isbn;
	this.numOfCopies=numOfCopies;
	if(numOfCopies<0) {
		throw new IllegalArgumentException("Number of copies cannot be negetive");
	}
}
//Title – Author – ISBN – Quantity
public void display() {
	System.out.println(bookTitle+"-"+author+"-"+isbn+"-"+numOfCopies);
}
}
